    <!--Always rotating content data template-->
    <DataTemplate x:Key="RotatingContentDataTemplate">
        <ContentPresenter Name="ContentHolder" Content="{Binding}" RenderTransformOrigin="0.5, 0.5" >
            <ContentPresenter.RenderTransform>
                <RotateTransform/>
            </ContentPresenter.RenderTransform>            
        </ContentPresenter>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding Visibility}" Value="Visible">
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="ContentHolder" 
                                         Storyboard.TargetProperty="(Control.RenderTransform).(RotateTransform.Angle)" 
                                         To="-360" Duration="0:0:1" RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>
